vec3 pathtracing(vec3 origin, vec3 direction){
    path trace = path(false, vec3(1), direction, vec3(0), false/*, create_false_array()*/);
    for (int i = 0; i <= max_bounce+1; ++i){
        hit r = ray(origin, trace.direction);
        if (r.hit){
            object obj = world[r.index];
            vec3 p = origin + r.dist*trace.direction;
            // sends last ray directly to light source. Not physical accurrate but reduces noise by a huge factor without getting to inacurat
            vec3 scattered;
            float pdf_val;
            path new_trace;
            mat material = cust_mat(obj, p);
            vec3 normal = calcNormal(p, obj);
            ONB onb = built_onb(normal);
            if (i == max_bounce-1){
                float pdf_material = 0;
                new_trace = scatter(material, r.index, p, origin, normal, trace.direction, onb, pdf_material);

                float pdf_light = 0;
                path light_trace = scatter_light(p, normal, onb, pdf_light);
                scattered = light_trace.direction;
                pdf_val = pdf_light;
            }
            else {
                float pdf_material = 0;
                new_trace = scatter(material, r.index, p, origin, normal, trace.direction, onb, pdf_material);

                //sampling only light
                float pdf_light = 0;
                path light_trace = scatter_light(p, normal, onb, pdf_light);

                //            int random_pdf = int(floor(rand()*2.));
                scattered = rand()<.5?new_trace.direction:light_trace.direction;
                pdf_val = .5*pdf_material+.5*pdf_light;
            }

            trace = path(new_trace.stop, //||light_trace.stop,
            trace.attenuation*new_trace.attenuation*scattering_pdf(material, r.index, p, origin, normal, scattered, trace.direction, new_trace.specular)/pdf_val,
            scattered, trace.emmission+new_trace.emmission*trace.attenuation, false/*, trace.inverted*/);
//            float eps = epsilon(p) * obj.epsilonFactor;
            float eps = obj.epsilonFactor;
            origin = p+2*eps*normalize(trace.direction+normal);
        }
        else {
            vec3 col = trace.emmission + trace.attenuation*sky(trace.direction);
            return col;
        }
        if (trace.stop) return trace.emmission;
    }

    return vec3(0);
}

vec3 getRayDir(vec2 p, float aspect){
    float sensor_width = 35; // sensor width is identic to Blender Camera
    float FOV = 2 * atan(sensor_width/(2*focal_length));  // in rad
    float renderWidth = 2;
    float z0 = renderWidth / (2 * tan(FOV / 2));
    p.x *= aspect;
    return normalize(vec3(p.xy,-z0));
}

void add_laser(uint index, vec3 position, mat3 rotation, float thickness, vec3 color, float gun_size, float target_size, float target_bright, bool importance_sampling){
    if (first_usable_laser < num_lasers){
        world[first_usable_laser].obj_index = 5;
        world[first_usable_laser].rotation = rotation;
        world[first_usable_laser].position = position;
        world[first_usable_laser].scale = thickness;
        world[first_usable_laser].material = emitter(color);

        if (gun_size + target_size != 0){
            uint gun_index = 2 * first_usable_laser+num_lasers;
            vec3 dir = rotation * vec3(0, -1, 0);
            float eps = 1;

            hit destHit = ray_shell(position + dir * 2000, dir, index, 10);
            if (destHit.hit) {
                vec3 destPosition = position + dir * abs(destHit.dist) + dir * 2000;

                world[gun_index+1].obj_index = 1;
                world[gun_index+1].position = destPosition;
                world[gun_index+1].scale = target_size;
                world[gun_index+1].material = emitter(color * target_bright);
                if (importance_sampling) {
                    num_lights++;
                    active_lights[first_usable_laser + 1] = true;
                }

                if (gun_size != 0) {
                    hit sourceHit = ray_shell(destPosition, dir * -1, destHit.index, eps);
                    if (sourceHit.hit) {
                        world[gun_index].obj_index = 1;
                        world[gun_index].position = destPosition + dir * -1 * (sourceHit.dist + eps);
                        world[gun_index].scale = gun_size;
                        world[gun_index].material = emitter(color);
                    }
                }
            }
        }
        ++first_usable_laser;
    }
}

