float deJulia(vec3 p){
    vec3 c;
    if (time < 18.5) c = vec3(-.7, .3, 0);
    else c = vec3(4.7/3*(time-18.5)-.7, 1.7/3*(time-18.5)+.3, 0);
//    else if (time < 19.29) c = vec3(1,.5,0);
//    else c = vec3(4, 2, 0);
//    vec3 c = julia_c;
    float power = exp_fractal();
    vec3 z = p;
    float m = dot(z,z);
    int iterations = 10;
    float bailout = 2.;

    vec4 trap = vec4(abs(z),m);
    float dz = 1.0;

    for( int i=0; i<iterations; i++ )
    {
        // size of the derivative of z (comp through the chain rule)
        // dz = 8*z^7*dz
        dz = power*pow(m,power/2.)*dz;

        // z = z^8+z
        float r = length(z);
        float b = power*acos( clamp(z.y/r, -1.0, 1.0));
        float a = power*atan( z.x, z.z );
        z = c + pow(r,power) * vec3( sin(b)*sin(a), cos(b), sin(b)*cos(a) );

        // orbit trapping
        trap = min( trap, vec4(abs(z),m) );

        m = dot(z,z);
        if( m > bailout )
        break;
    }

//    resColor = trap;

    // distance estimation (through the Hubbard-Douady potential)
    return 0.25*log(m)*sqrt(m)/dz;
}

